{
  "name": "teste_tecnico_ecto",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:test": "dotenv -e .env.test next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "dotenv -e .env.test -- vitest run --bail 1",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage --no-file-parallelism --passWithNoTests",
    "test:watch": "dotenv -e .env.test -- vitest watch --bail 1",
    "test:unit": "dotenv -e .env.test -- vitest run  --exclude 'src/**/*.{spec,e2e}.{ts,tsx}'  --fileParallelism",
    "test:unit:watch": "dotenv -e .env.test -- vitest --exclude 'src/**/*.{spec,e2e}.{ts,tsx}'  --fileParallelism",
    "test:int": "dotenv -e .env.test -- vitest run --exclude 'src/**/*.{test,e2e}.{ts,tsx}' --no-file-parallelism --passWithNoTests",
    "test:int:watch": "dotenv -e .env.test -- vitest --exclude 'src/**/*.{test,e2e}.{ts,tsx}' --no-file-parallelism",
    "test:e2e": "dotenv -e .env.test -- playwright test --reporter null",
    "test:e2e:headed": "dotenv -e .env.test -- playwright test --headed  --reporter null",
    "test:e2e:debug": "dotenv -e .env.test -- playwright test --debug --reporter null",
    "test:e2e:ui": "dotenv -e .env.test -- playwright test --ui --reporter null",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.89.0",
    "axios": "^1.12.2",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "ultracite": "5.3.8",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
