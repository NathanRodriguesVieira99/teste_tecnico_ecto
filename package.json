{
  "name": "teste_tecnico_ecto",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:test": "dotenv -e .env.test next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "dotenv -e .env.test -- vitest run --bail 1",
    "test:coverage": "dotenv -e .env.test -- vitest run --coverage --no-file-parallelism",
    "test:watch": "dotenv -e .env.test -- vitest watch --bail 1",
    "test:unit": "dotenv -e .env.test -- vitest run  --exclude 'src/**/*.{spec,e2e}.{ts,tsx}'  --fileParallelism",
    "test:unit:watch": "dotenv -e .env.test -- vitest --exclude 'src/**/*.{spec,e2e}.{ts,tsx}'  --fileParallelism",
    "test:int": "dotenv -e .env.test -- vitest run --exclude 'src/**/*.{test,e2e}.{ts,tsx}' --no-file-parallelism",
    "test:int:watch": "dotenv -e .env.test -- vitest --exclude 'src/**/*.{test,e2e}.{ts,tsx}' --no-file-parallelism",
    "test:e2e": "dotenv -e .env.test -- playwright test --reporter null",
    "test:e2e:headed": "dotenv -e .env.test -- playwright test --headed  --reporter null",
    "test:e2e:debug": "dotenv -e .env.test -- playwright test --debug --reporter null",
    "test:e2e:ui": "dotenv -e .env.test -- playwright test --ui --reporter null",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "dotenv": "^17.2.2",
    "dotenv-cli": "^10.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
